{
  "name": "backend",
  "version": "1.0.0",
  "scripts": {
    "start": "node ./lib/main.js",
    "start:dev": "ts-node --transpile-only ./src/main.ts",
    "start:watch": "yarn generate && ts-node-dev --no-notify --respawn --transpile-only ./src/main.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint --max-warnings 0 \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit -p .",
    "generate:schema": "ts-node --transpile-only src/schema.ts",
    "generate": "prisma2 generate && yarn generate:schema",
    "postinstall": "yarn generate",
    "jest": "jest --coverage --passWithNoTests",
    "test": "yarn lint && yarn typecheck && yarn format:check && yarn jest"
  },
  "dependencies": {
    "@prisma/client": "2.0.0-preview021",
    "@sendgrid/mail": "^6.5.3",
    "aws-sdk": "^2.627.0",
    "axios": "^0.19.2",
    "bcrypt": "^3.0.8",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.1",
    "global": "^4.4.0",
    "graphql": "^14.6.0",
    "graphql-shield": "6.1.0",
    "graphql-upload": "8.0.7",
    "graphql-yoga": "^1.18.3",
    "js-base64": "^2.5.2",
    "nexus": "^0.12.0-rc.11",
    "nexus-prisma": "^0.9.1",
    "prisma2": "2.0.0-preview021",
    "shortid": "^2.2.15",
    "stripe": "^8.19.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/ejs": "^3.0.1",
    "@types/express": "^4.17.2",
    "@types/graphql-upload": "^8.0.3",
    "@types/jest": "^24.0.23",
    "@types/js-base64": "^2.3.1",
    "@types/node": "^12.12.21",
    "@types/shortid": "^0.0.29",
    "eslint": "^6.7.2",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.4",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.5"
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "tabWidth": 2
  }
}
