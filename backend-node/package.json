{
  "name": "backend",
  "version": "1.0.0",
  "scripts": {
    "start": "node ./lib/main.js",
    "start:dev": "ts-node ./src/main.ts",
    "start:watch": "yarn generate && ts-node-dev --no-notify --respawn --transpile-only ./src/main.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint --max-warnings 0 \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit -p .",
    "generate": "prisma2 generate && ts-node --transpile-only src/schema.ts",
    "postinstall": "yarn generate",
    "jest": "jest --coverage --passWithNoTests",
    "test": "yarn lint && yarn typecheck && yarn format:check && yarn jest"
  },
  "dependencies": {
    "@prisma/client": "^2.0.0-preview021",
    "axios": "^0.19.2",
    "graphql": "^14.6.0",
    "graphql-yoga": "^1.18.3",
    "nexus": "^0.12.0-rc.11",
    "nexus-prisma": "^0.9.1",
    "prisma2": "^2.0.0-preview021"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.21",
    "eslint": "^6.7.2",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.4",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.5"
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "tabWidth": 2
  }
}
